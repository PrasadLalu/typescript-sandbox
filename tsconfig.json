{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "useUnknownInCatchVariables": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictPropertyInitialization": true,
        "baseUrl": "./",
        "paths": {
          "@logger": ["src/utils/logger.ts"]
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}